{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2021",
      "dom"
    ],
    "baseUrl": "./",
    "module": "commonjs",
    "outDir": "./build",
    "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@app/*": [
        "src/*"
      ],
      "@common/*": [
        "src/common/*"
      ],
      "@config": [
        "src/config/index"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@dto": [
        "src/api/dto/index"
      ],
      "@dto/ErrorDTO": [
        "src/api/dto/ErrorDTO"
      ],
      "@emailServices": [
        "src/services/emailServices/index"
      ],
      "@enums": [
        "src/enums/index"
      ],
      "@interfaces": [
        "src/core/interfaces/index"
      ],
      "@models": [
        "src/models/index"
      ],
      "@repository/*": [
        "src/repository/*"
      ],
      "@schema/*": [
        "src/Schema/*"
      ],
      "@services": [
        "src/core/services/index"
      ]
    },
    "removeComments": false,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strictPropertyInitialization": false,
    "target": "es2021",
    "types": [
      "reflect-metadata",
      "node"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}